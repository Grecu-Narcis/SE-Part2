<Window x:Class="Iss.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Iss"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Influencer" Width="150" Height="50" Click="InfluencerClick" Background="CornflowerBlue" Foreground="White" FontSize="16" FontWeight="Bold" BorderBrush="Black" BorderThickness="2" Padding="10"/>
            <Button Content="Company" Width="150" Height="50" Click="CompanyClick" Background="ForestGreen" Foreground="White" FontSize="16" FontWeight="Bold" BorderBrush="Black" BorderThickness="2" Padding="10"/>
        </StackPanel>
    </Grid>
</Window>
